
<div id="restaurantItem" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new restaurant</h4>
            </div>

            <div class="modal-body">

                <label for="Name">Name</label>
                <div class="form-inline">
                    <input id="Name" type="text" class="form-control" data-bind="value: Name" required>
                    <label id="NameWarning" class="text-danger pull-right" data-bind="text:showWarningNameEmpty"></label>
                </div>
                <label for="Address">Address</label>
                <div class="form-inline">
                    <input id="Address" type="text" class="form-control" data-bind="value: Address" required>
                    <label id="AddressWarning" class="text-danger pull-right" data-bind="text:showWarningAddressEmpty"></label>
                </div>

                <label for="RestaurantTypes">Type</label>
                <div class="form-inline">
                    <select id="RestaurantTypes" class="form-control" data-bind="options:Types, optionsText: 'Description', optionsValue: 'Id', value: Type, optionsCaption: 'Choose type...'"></select>
                    <label id="TypeWarning" class="text-danger pull-right" data-bind="text:showWarningTypeEmpty"></label>
                </div>

                <label for="MaxPrices">MaxPrice</label>
                <div class="form-inline">
                    <input id="MaxPrices" type="number" onkeypress="return event.charCode >=48" min="0" class="form-control" data-bind="value: MaxPrice">
                    <label id="MaxPriceWarning" class="text-danger pull-right" data-bind="text:showWarningMaxPriceEmpty"></label>
                </div>

                <label for="Seats">Seats</label>
                <div class="form-inline">
                    <input id="Seats" type="number" onkeypress="return event.charCode >=48" min="0" class="form-control" data-bind="value: SeatsAvailable">
                    <label id="SeatsWarning" class="text-danger pull-right" data-bind="text:showWarningSeatsEmpty"></label>
                </div>
              @using (Html.BeginForm("Upload", "Restaurants",FormMethod.Post,new { enctype = "multipart/form-data" }))
              {
                      <div>
                           <label for="file">Image</label>
                          <input name="rid" hidden="hidden" data-bind="value:id"/>
                          <input type = "file" name = "file" id = "file" style = "width: 100%;"/> 

                                 <input type = "submit" value = "Upload" class="submit"/>
                       </div> 
              }
            </div>

            <div class="modal-footer">
                <button id="SaveButton" type="button" class="btn btn-success" data-bind="click:save">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>