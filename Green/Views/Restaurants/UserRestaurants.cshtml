    .jumbotron {
        background-color: #F6BB42;
    }

        .jumbotron h1 {
            font-size: 50px;
        }

    .popover {
        width: 200px;
    }

    .dropdown-toggle {
        margin-right: auto;
        margin-left: auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    .input-group {
        padding-top: 5px;
        padding-bottom: 30px;
        padding-left: 100px;
        border-top: 1px;
        border-bottom: 100px;
        border-left: 100px;
        text-align: center;
    }

    .dropdown {
        padding-top: 5px;
        padding-bottom: 35px;
        padding-left: 108px;
        border-top: 1px;
        border-bottom: 200px;
        border-left: 100px;
        text-align: center;
    }

    .dropdown-menu {
        left: auto;
        right: auto;
        padding-top: 5px;
