@{
    ViewBag.Title = "Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div id="userRestaurants">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="jumbotron">
                    <h2>
                        Search the perfect restaurant for you!
                    </h2>
                    <p style="color: brown; font-weight:bold; font-style:italic; font-size: medium">
                        “One cannot think well, love well, sleep well, if one has not dined well.”
                    </p>

                </div>
            </div>
        </div>
        <hr />
        <div class="row-fluid">
            <div class="col-md-4">

                <div id="custom-search-input" style="position: relative">
                    <div class="input-group ">
                        <input type="text" class="search-query form-control" placeholder="Search..." name="value" />
                        <span class="input-group-btn col-md-offset-1" >
                            <button class="btn btn-danger" type="button" data-bind="click:search">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn btn-danger dropdown-toggle " style="float:left" type="button" data-toggle="dropdown">
                        Change the restaurant type
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li class="dropdown-header">Select type</li>
                        <li><a href="#"></a></li>
                        <li><a href="#">Vegan</a></li>
                        <li><a href="#">Vegetarian</a></li>
                        <li><a href="#">Pastry</a></li>
                        <li><a href="#">Traditional</a></li>
                        <li><a href="#">Backery</a></li>

                    </ul>
                </div>
                <br />
                <div class="text">
                    <p style="padding-left: 110px;text-align:left">Here you can search for your favorite restaurant. You can search after a restaurant by its name or by its type.</p>
                </div>
            </div>
            <div class="col-md-8">
                <img src="../img/res.png" width="500" height="350" />

            </div>
        </div>

        <hr />
        <div class="row">

            <div class="col-md-12">
                <hr />
                <div class="row" data-bind="foreach:UserRestaurants">

                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img data-bind="attr: {src: '../Content/images/'+ ImageName}" style="width:500px;height:300px">
                            <div class="caption">
                                <h2 data-bind="text:Name" style="color:cornflowerblue"></h2>
                                <hr />
                                <div style="margin-right:20px;margin-bottom:10px">
                                    <text style="text-align:left;color:black;font-weight:bold;">Address:</text>
                                    <text data-bind="text:Address"></text>
                                </div>


                                <div style="margin-right:20px;margin-bottom:10px">
                                    <text style="text-align:left;color:black;font-weight:bold;">Type:</text>
                                    <text data-bind="text:TypeDisplay"></text>
                                </div>
                                <div class="rateit" data-rateit-resetable="false" data-bind="enable:$parent.getRating"></div>

                                <div style="display:inline-block;margin-bottom:5px">
                                    <button class="btn btn-info" style="margin-right:135px;" data-toggle="modal" data-target="#detailsItem">Details</button>
                                    <a href="#" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-heart-empty"></span> Add to favorites</a>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <ul class="pagination">
                    <li>
                        <a href="#">Prev</a>
                    </li>
                    <li>
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @Html.Partial("Details")

</div>
<script>
    $(function () {
        var vm = new UserRestaurants();
        vm.refresh();
        ko.applyBindings(vm, $("#userRestaurants").get(0));
    });

</script>

