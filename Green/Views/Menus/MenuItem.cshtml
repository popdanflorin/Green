<style>
    #menuItem {
        overflow: scroll;
    }

    #RestaurantMenuDisplay {
        box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 1px 5px 0px rgba(0, 0, 0, 0.12);
        border-radius: 4px;
        border-color: none;
    }

        #RestaurantMenuDisplay a:focus,
        #RestaurantMenuDisplay a:hover,
        #RestaurantMenuDisplay a:active {
            outline: 0;
            text-decoration: none;
        }

        #RestaurantMenuDisplay .panel {
            border-width: 0 0 1px 0;
            border-style: solid;
            /*border-color: #fff;*/
            border-radius: 0;
            border-color: none;
            border: none;
            background: none;
            box-shadow: none;
        }

            #RestaurantMenuDisplay .panel:last-child {
                border-bottom: none;
            }

        #RestaurantMenuDisplay > .panel:first-child .panel-heading {
            border-radius: 4px 4px 0 0;
        }

        #RestaurantMenuDisplay .panel + .panel {
            margin-top: 0;
            border: none;
        }

        #RestaurantMenuDisplay .panel-heading {
            border: none;
            padding: 0;
            border-radius: 0 0 4px 4px;
            transition: border-radius 0.3s linear 0.2s;
            height: auto;
        }

        #RestaurantMenuDisplay .panel-title a {
            font-weight: 700;
            color: white;
            /*border-color: #fed136;*/
            background-color: #999999;
            font-family: 'Montserrat', 'Helvetica Neue', Helvetica, Arial, sans-serif;
            text-transform: uppercase;
            display: block;
            padding: 5px;
            position: relative;
            font-size: 16px;
        }

        #RestaurantMenuDisplay .panel-title :hover {
            color: #ffffff;
            background-color: #808080;
            border-color: #7a7a7a;
        }

        #RestaurantMenuDisplay .panel-collapse {
            background: #fff;
            border-color: none;
            height: auto;
            max-height: 300px;
            overflow-y: scroll;
        }

        #RestaurantMenuDisplay .panel:last-child .panel-collapse {
            border-radius: 0 0 4px 4px;
        }

        #RestaurantMenuDisplay .list-group-item:hover {
            cursor: pointer;
        }

        #RestaurantMenuDisplay #MealsList .list-group-item-heading {
            font-weight: 600;
            margin-bottom: 0;
            border: 1px solid white;
            background-color: #999999;
            border-color: none;
            color: white;
            height: 40px;
        }

            #RestaurantMenuDisplay #MealsList .list-group-item-heading:not(:first-child) {
                /*margin-top: 10px;*/
            }

            #RestaurantMenuDisplay #MealsList .list-group-item-heading:hover {
                cursor: default;
            }

    #DisplayCaseButtons {
        margin-top: 11px;
        margin-bottom: 6px;
        width: 100%;
        border: none;
        overflow:auto;
    }


    /*#menus #MealSearchBox {
        width: 130px;
