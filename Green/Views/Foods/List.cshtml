@using Green.Models
@{
    ViewBag.Title = "Foods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group {
        position:relative;
    }
    .form-group .btn {
        width:120px;  
    }
</style>

<div id="foods">
    <h2>Foods</h2>
    <div class="form-group">
        <input type="button" value="New" class="btn btn-primary" data-toggle="modal" data-target="#foodItem" data-bind="click:add" />
        <input id="DeleteFoodsButton" type="button" value="Delete" class="btn btn-primary" disabled/>
    </div>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th data-bind="click: sort('Name')">Name</th>
                <th data-bind="click: sort('Type')">Type</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach:Foods">
            <tr>
                <td class="col-xs-5" data-bind="text:Name"></td>
                <td class="col-xs-4" data-bind="text:TypeDisplay"></td>
                <td class="col-xs-1">
                    <input type="button" value="Edit" class="btn btn-info" data-toggle="modal" data-target="#foodItem" data-bind="click:$parent.details" />
                </td>
                <td class="col-xs-1">
                    <input type="button" value="Delete" class="btn btn-danger" data-bind="click:$parent.delete" />
                </td>
                <td class="col-xs-1"><input type="checkbox" onclick="checkboxClick(Name)"/></td>
            </tr>
        </tbody>
    </table>
    @Html.Partial("Item")
</div>
<script>
    $(function () {
        ko.cleanNode($("#foods")[0]);
        vm = new Foods();
        vm.refresh();
        ko.applyBindings(vm, $("#foods").get(0));

    });

    function checkboxClick(data) {
        alert(data);
        vm.check(data);
    };
</script>
