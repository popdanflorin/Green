<div id="foodItem" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" @*data-bind="click: $('#foodItem').modal('hide')"*@>&times;</button>
                <h4 class="modal-title">Manage food</h4>
            </div>

            <div class="modal-body">
                <div class="form-horizontal">
                    <label for="Name" style="position:fixed; left: 30px">Name</label>
                    <br />
                    <input id="Name" type="text" class="form-control" data-bind="value: Name" placeholder="Enter food's name">
                    <label class="text-danger pull-right" data-bind="text: $root.warningName"></label>
                </div>

                <div class="clearfix"></div>
                <div class="form-horizontal">
                    <label for="Type" style="position:fixed; left: 30px">Type</label>
                    <br />
                    <select id="Type" class="form-control" data-bind="options:Types, optionsText: 'Description', optionsValue: 'Id', value: Type, optionsCaption: 'Choose...'"></select>
                    <label class="text-danger pull-right" data-bind="text: $root.warningType"></label>
                </div>
            </div>

            <div class="modal-footer">
                <button id="FoodOKButton" class="btn btn-success" data-bind="click:save">Save</button>
                <button id="FoodDeleteButton" class="btn btn-danger" data-bind="click:$root.deleteModal" style="display: none;">Delete</button>
                <button id="CloseButton" class="btn btn-default" data-dismiss="modal" @*data-bind="click: $('#foodItem').modal('hide')"*@>Close</button>
            </div>
        </div>
    </div>
</div>
