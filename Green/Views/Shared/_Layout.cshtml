@using Green.Extensions;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/overlay")
    @Scripts.Render("~/bundles/viewModels")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/rateit")
    <script>
        var Model = JSON.parse('@(Html.Raw(Html.JsonStringify((object)Model)))');
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Green", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                    <li>@Html.ActionLink("Foods", "List", "Foods")</li>
                    <li>@Html.ActionLink("Meals", "List", "Meals")</li>
                    <li>@Html.ActionLink("Reservations", "List", "Reservations")</li>
                    <li>@Html.ActionLink("Restaurants", "UserRestaurants", "Restaurants")</li>
                    @if (User.IsInRole("AppAdmin"))
                    {
                    <li>@Html.ActionLink("Manage Restaurants", "List", "Restaurants")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Tecknoworks @DateTime.Now.Year </p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
